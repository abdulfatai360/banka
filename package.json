{
  "name": "banka",
  "version": "1.0.0",
  "description": "Banka is a light-weight core banking application that powers banking operations like account creation, customer deposit and withdrawals.",
  "main": "src/index.js",
  "scripts": {
    "build": "babel src --out-dir dist --source-maps",
    "build:dev": "babel src --watch --out-dir dist --source-maps",
    "start": "node dist/index.js",
    "start:dev": "nodemon dist/index.js",
    "test": "set ENV_TEST=true &&  nyc --reporter=html --reporter=text mocha --recursive --colors --inline-diffs --slow 200 --timeout 5000 --exit --require @babel/register",
    "test:dev": "set ENV_TEST=true && mocha --recursive --colors --inline-diffs --slow 200 --timeout 5000 --exit --require @babel/register",
    "coverage": "nyc report --reporter=text-lcov | coveralls",
    "tables:up": "node ./dist/database/tables/all-tables.js tablesUp",
    "tables:down": "node ./dist/database/tables/all-tables.js tablesDown"
  },
  "keywords": [],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/abdulfatai360/banka.git"
  },
  "author": "Abdulfatai Jimoh",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/abdulfatai360/banka/issues"
  },
  "homepage": "https://github.com/abdulfatai360/banka#readme",
  "dependencies": {
    "@babel/polyfill": "^7.4.3",
    "bcryptjs": "^2.4.3",
    "dotenv": "^7.0.0",
    "express": "^4.16.4",
    "helmet": "^3.16.0",
    "joi": "^14.3.1",
    "jsonwebtoken": "^8.5.1",
    "make-runnable": "^1.3.6",
    "nodemailer": "^6.1.0",
    "pg": "^7.9.0"
  },
  "devDependencies": {
    "@babel/cli": "^7.4.3",
    "@babel/core": "^7.4.3",
    "@babel/preset-env": "^7.4.3",
    "@babel/register": "^7.4.0",
    "chai": "^4.2.0",
    "chai-http": "^4.2.1",
    "coveralls": "^3.0.3",
    "eslint": "^5.16.0",
    "eslint-config-airbnb-base": "^13.1.0",
    "eslint-plugin-import": "^2.16.0",
    "eslint-plugin-mocha": "^5.3.0",
    "mocha": "^6.0.2",
    "nodemon": "^1.18.10",
    "nyc": "^13.3.0"
  }
}
